{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": true,
    "declarationDir": "lib",
    "diagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es6", "es2015", "es7", "es2016", "es2017"],
    "listEmittedFiles": true,
    "listFiles": true,
    "module": "es6",
    "moduleResolution": "Node",
    "noEmit": false,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "paths": {
      "src/*": ["src/*"]
    },
    "removeComments": true,
    "resolveJsonModule": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["node_modules/@types", "src/**/*"],
  "exclude": ["node_modules", "**/*.spec.*", "**/*.test.*"]
}
